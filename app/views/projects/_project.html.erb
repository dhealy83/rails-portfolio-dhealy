<div id="<%= dom_id project %>" class="text-light">
<%= stylesheet_link_tag "projects", "data-turbo-track": "reload" %>
  
  <div class="m-2">
    <% if user_signed_in? %>
      <%= link_to "New project", new_project_path if current_user.admin?%>
    <% end %>
  </div>

  <div class="container">
    <div class="row my-5">
      <div class="col-sm-12 col-md-6 p-0 px-2">
        <div class="m-2 my-3">
          <h1 class="fs-1">
            <%= project.title %>
          </h1>
        </div>
      </div>

      <div class="col-sm-12 col-md-6 p-0 ">
        <div class="images d-flex justify-content-center ">
          <% project.images.each do |image| %>
            <%= image_tag(image, style: "width: 100%;") %>
          <% end %>
        </div>
      </div>



      <p><%= project.description.to_plain_text.truncate(200) %><span id="dots"></span>
        <span id="more"><%= project.description.to_plain_text %></span>
      </p>

      <script>
      function myFunction() {
        var dots = document.getElementById("dots");
        var moreText = document.getElementById("more");
        var btnText = document.getElementById("myBtn");

        if (dots.style.display === "none") {
          dots.style.display = "inline";
          btnText.innerHTML = "Read more"; 
          moreText.style.display = "none";
        } else {
          dots.style.display = "none";
          btnText.innerHTML = "Read less"; 
          moreText.style.display = "inline";
        }
      }
      </script>
      
      <div class="m-2">
        <div class="row">
          <div class="d-flex justify-content-around">
            <a href="<%= project.repo_link %>" 
                class="btn btn-dark" 
                tabindex="-1" 
                role="button" 
                aria-disabled="true"
                target="blank">
                Repo Link
            </a>
            <a href="<%= project.deployed_link %>" 
                class="btn btn-dark" 
                tabindex="-1" 
                role="button" 
                aria-disabled="true"
                target="blank">
                Deployed App
            </a>
            <div class="btn btn-dark" id="">
              <link_to onclick="myFunction()" id="myBtn" class="myBtn btn btn-dark p-0 lh-1">Read More</link_to>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>