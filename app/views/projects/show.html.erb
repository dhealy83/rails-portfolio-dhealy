<p style="color: green"><%= notice %></p>

<%= render @project %>

  <div class="bg-dark text-white m-3">
    <%= @project.description %>
  </div>

  <% if user_signed_in? %>
    <div class="m-2">
      <%= link_to "Edit this project", edit_project_path(@project) if current_user.admin? %> |
      <%= link_to "Back to projects", projects_path if current_user.admin? %>

      <%= button_to "Destroy this project", @project, method: :deleteif if current_user.admin? %>
    </div>
  <% end %>