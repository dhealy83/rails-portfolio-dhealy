<p style="color: green"><%= notice %></p>

<% if user_signed_in? %>

  <p>
    <%= link_to "New home page", new_home_page_path if current_user.admin? %>
  </p>  
<% end %>  

<div id="home_pages" class="text-light">
  <% @home_pages.each do |home_page| %>
    <%= render home_page %>
</div>
  
  <% if user_signed_in? %>
    <p>
      <%= link_to "Show this home page", home_page if current_user.admin? %>
    </p>
    
  <% end %>

<%end %>